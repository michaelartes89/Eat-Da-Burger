<div class="container mt-5 py-5 px-3">
   <div class="row">
      <div class="col text-center">
         <i class="fas fa-hamburger"></i>
      </div>

   </div>
   <div class="row mt-5">
      <div class="col text-center">
         <h1>BURGERTRON-5000</h1>
        
      </div>
   </div>
   <div class="row mt-5">
      <div class="col">
         <form>
            <div class="form-group">
               <label for="burgerName">Burger Name:</label>
               <input type="text" class="form-control" name="burgerName" id="burgerName"
                  placeholder="Your Burger's Name">
            </div>
            <div class="form-group">
               <label for="burgerName">Burger Toppings:</label>
               <input type="text" class="form-control" name="burgerToppings" id="burgerToppings"
                  placeholder="What toppings for this burger?">
            </div>
            <button type="submit" class="btn btn-primary create-burger"><i class="far fa-save"></i> Save</button>
         </form>
      </div>
   </div>
   <div id="ready" class="row mt-5 text-center">
      <div class="col-sm-6">
         <h2>Ready to Eat:</h2>
         <ul>
            {{#each burgers}}
            {{#unless eaten}}
            {{> burgers/burger-block eaten=true}}
            {{/unless}}
            {{/each}}
         </ul>
      </div>
      <div id="crushed" class="col-sm-6">
         <h2>Crushed That:</h2>
         <ul>
            {{#each burgers}}
            {{#if eaten}}
            {{> burgers/burger-block eaten=false}}
            {{/if}}
            {{/each}}
         </ul>
      </div>
   </div>

</div>